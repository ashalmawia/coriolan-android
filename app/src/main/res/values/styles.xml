<resources>

	<style name="CardText">
		<item name="android:textSize">16sp</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="CardButton">
		<item name="android:textSize">14sp</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="PendingCounter">
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:drawablePadding">3dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/deck_progress_bar__foregreound</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="PendingCounter.Standout">
		<item name="android:background">@drawable/bg_pending</item>
		<item name="android:textColor">@color/pending_item__foreground</item>
	</style>

	<style name="EditCardSubtitle" parent="Coriolan.Text.Caption.Label" />

</resources>
