<resources>

	<style name="CardText">
		<item name="android:textSize">@dimen/card_text_size</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textIsSelectable">true</item>
	</style>

	<style name="CardCover">
		<item name="android:background">@color/card_cover_bg</item>
		<item name="android:src">@drawable/ic_question</item>
		<item name="android:padding">30dp</item>
	</style>

	<style name="CardButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_marginLeft">@dimen/spacing__large</item>
		<item name="android:layout_marginRight">@dimen/spacing__large</item>
		<item name="android:layout_marginBottom">@dimen/spacing__tiny</item>
		<item name="android:layout_height">42dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="PendingCounter" />

	<style name="PendingCounter.Container">
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="PendingCounter.Counter">
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:drawablePadding">3dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="PendingCounter.Counter.Simple">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/card_activity__pending_counters</item>
	</style>

	<style name="PendingCounter.Counter.Standout">
		<item name="android:background">@drawable/bg_pending</item>
		<item name="android:paddingLeft">7dp</item>
		<item name="android:paddingRight">7dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/pending_item__foreground</item>
	</style>

	<style name="EditCardSubtitle" parent="Coriolan.Text.Caption.Label" />

	<style name="DeckList" />

	<style name="DeckList.Item">
		<item name="android:padding">@dimen/spacing__small</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="DeckList.Item.Comment">
		<item name="android:textStyle">italic</item>
	</style>

	<style name="DeckList.Category" parent="Coriolan.Text.Caption">
		<item name="android:padding">@dimen/spacing__small</item>
	</style>

	<style name="DeckDetails" />

	<style name="DeckDetails.Caption" parent="DeckDetails.Cell">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="DeckDetails.Caption.Vertical">
		<item name="android:gravity">end</item>
	</style>

	<style name="DeckDetails.Cell">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_margin">@dimen/spacing__small</item>
	</style>

	<style name="IncreaseLimits">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">2</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/spacing__tiny</item>
		<item name="android:layout_marginRight">@dimen/spacing__tiny</item>
	</style>

	<style name="IncreaseLimits.Caption">
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">end</item>
	</style>

	<style name="IncreaseLimits.Input">
		<item name="android:inputType">numberSigned</item>
		<item name="android:gravity">start</item>
	</style>

	<style name="IncreaseLimits.Info" parent="IncreaseLimits.Caption">
		<item name="android:gravity">start</item>
	</style>

	<style name="IncreaseLimits.Info.Of">
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:text">/</item>
	</style>

</resources>
