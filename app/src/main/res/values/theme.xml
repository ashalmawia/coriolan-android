<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Coriolan" />

	<!-- Base application theme. -->
	<style name="Coriolan.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>
	</style>
	
	<style name="Coriolan.Theme.Splash">
		<item name="android:windowBackground">@drawable/splash</item>
	</style>

	<style name="Coriolan.Text" />

	<style name="Coriolan.Text.Title">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Coriolan.Text.Subtitle">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Coriolan.Text.Caption">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Coriolan.Text.Caption.Label">
		<item name="android:layout_marginLeft">@dimen/spacing__tiny</item>
		<item name="android:layout_marginStart">@dimen/spacing__tiny</item>
	</style>

</resources>