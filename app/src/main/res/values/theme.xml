<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Coriolan" />

	<style name="Coriolan.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>
		<item name="android:textColorSecondary">@color/textColorSecondary</item>
		<item name="android:textColorTertiary">@color/textColorTertiary</item>
		<item name="fontFamily">@font/montserrat</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="hintTextColor">@color/textColorTertiary</item>
		<item name="textAppearanceBody1">@style/Coriolan.Text.Body.Regular</item>
		<item name="textAppearanceBody2">@style/Coriolan.Text.Body.Regular</item>
		<item name="textAppearanceBodyMedium">@style/Coriolan.Text.Body.Regular</item>
		<item name="textAppearanceBodySmall">@style/Coriolan.Text.Body.Small</item>
		<item name="textAppearanceBodyLarge">@style/Coriolan.Text.Body.Large</item>
		<item name="android:textAppearance">@style/Coriolan.Text.Body.Regular</item>
		<item name="android:textAppearanceSmall">@style/Coriolan.Text.Body.Regular</item>
		<item name="android:textAppearanceMedium">@style/Coriolan.Text.Body.Regular</item>
		<item name="android:textAppearanceLarge">@style/Coriolan.Text.Body.Large</item>
		<item name="android:textAppearanceListItem">@style/Coriolan.Text.Body.Regular</item>
		<item name="android:textAppearanceListItemSecondary">@style/Coriolan.Text.Body.Small.Thin</item>

		<item name="dialogTheme">@style/Coriolan.Theme.Dialog</item>
		<item name="android:dialogTheme">@style/Coriolan.Theme.Dialog</item>
		<item name="android:alertDialogTheme">@style/Coriolan.Theme.Dialog</item>
		<item name="alertDialogTheme">@style/Coriolan.Theme.Dialog</item>

		<item name="buttonBarButtonStyle">@style/Coriolan.Button.Borderless</item>
		<item name="buttonStyle">@style/Coriolan.Button.Borderless</item>
		<item name="editTextStyle">@style/Coriolan.Widget.EditText</item>

		<item name="toolbarStyle">@style/Coriolan.Widget.Toolbar</item>
		<item name="android:toolbarStyle">@style/Coriolan.Widget.Toolbar</item>
	</style>
	
	<style name="Coriolan.Theme.Splash" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/colorPrimary</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
		<item name="windowSplashScreenAnimationDuration">500</item>
		<item name="postSplashScreenTheme">@style/Coriolan.Theme</item>
	</style>

	<style name="Coriolan.Theme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>

		<item name="fontFamily">@font/montserrat</item>
		<item name="android:fontFamily">@font/montserrat</item>

		<item name="android:windowTitleStyle">@style/Coriolan.WindowTitle</item>

		<item name="buttonBarButtonStyle">@style/Coriolan.Button.Borderless</item>
		<item name="android:buttonBarPositiveButtonStyle">@style/Coriolan.Button.Borderless</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/Coriolan.Button.Borderless</item>
		<item name="android:buttonBarNeutralButtonStyle">@style/Coriolan.Button.Borderless</item>
	</style>

	<style name="Coriolan.WindowTitle">
		<item name="android:textAppearance">@style/Coriolan.Text.Title</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
		<item name="android:shadowRadius">0</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textAlignment">viewStart</item>
	</style>
	<style name="Coriolan.Text.Preference.Title" parent="Coriolan.Text.Body.Regular.Heavy" />

	<style name="Coriolan.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/colorPrimary</item>
		<item name="popupTheme">@style/Theme.AppCompat.Light</item>
		<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="titleTextColor">@color/white</item>
		<item name="titleTextAppearance">@style/Coriolan.Text.Title.Toolbar</item>
	</style>

	<style name="Coriolan.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
		<item name="android:textAppearance">@style/Coriolan.Text.Button</item>
		<item name="android:textColor">@color/colorAccentContrast</item>
	</style>

	<style name="Coriolan.Widget.EditText" parent="Widget.AppCompat.EditText">
		<item name="android:textAppearance">@style/Coriolan.Text.Input</item>
	</style>

	<style name="Coriolan.Widget.ListItem" parent="Coriolan.Text.SelectableItem">
		<item name="android:paddingStart">@dimen/spacing__small</item>
		<item name="android:paddingEnd">@dimen/spacing__small</item>
		<item name="android:paddingTop">@dimen/spacing__small</item>
		<item name="android:paddingBottom">@dimen/spacing__small</item>
	</style>

	<style name="Coriolan.Widget.ListItem.Action" />

</resources>