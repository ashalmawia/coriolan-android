<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Coriolan" />

	<style name="Coriolan.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>
		<item name="android:textColorSecondary">@color/textColorSecondary</item>
		<item name="android:textColorTertiary">@color/textColorTertiary</item>
		<item name="fontFamily">@font/montserrat</item>
		<item name="android:fontFamily">@font/montserrat</item>

		<item name="preferenceCategoryTitleTextColor">@color/colorAccentContrast</item>

		<item name="android:alertDialogTheme">@style/Coriolan.AlertDialog</item>
		<item name="alertDialogTheme">@style/Coriolan.AlertDialog</item>
		<item name="buttonBarButtonStyle">@style/Coriolan.ButtonBarButton</item>
	</style>
	
	<style name="Coriolan.Theme.Splash" parent="Theme.SplashScreen">
		<item name="windowSplashScreenBackground">@color/colorPrimary</item>
		<item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
		<item name="windowSplashScreenAnimationDuration">500</item>
		<item name="postSplashScreenTheme">@style/Coriolan.Theme</item>
	</style>

	<style name="Coriolan.Theme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowTitleStyle">@style/DialogTitle</item>

		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textColor">@color/textColorPrimary</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>

		<item name="buttonBarButtonStyle">@style/Coriolan.ButtonBarButton</item>
	</style>

	<style name="Coriolan.Toolbar">
		<item name="android:background">@color/colorPrimary</item>
		<item name="popupTheme">@style/Theme.AppCompat.Light</item>
		<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="titleTextColor">@color/white</item>
	</style>

	<style name="Coriolan.Text" />

	<style name="Coriolan.Text.Title">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Coriolan.Text.Subtitle">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Coriolan.Text.Caption">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Coriolan.Text.Caption.Label">
		<item name="android:layout_marginLeft">@dimen/spacing__tiny</item>
		<item name="android:layout_marginStart">@dimen/spacing__tiny</item>
	</style>

	<style name="Coriolan.ButtonBarButton" parent="@style/Widget.AppCompat.Button.Borderless">
		<item name="android:textAppearance">@style/Coriolan.ButtonBarButton.TextAppearance</item>
		<item name="android:textColor">@color/colorAccentContrast</item>
	</style>

	<style name="Coriolan.ButtonBarButton.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
		<item name="android:textColor">@color/colorAccentContrast</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="Coriolan.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:buttonBarPositiveButtonStyle">@style/Coriolan.ButtonBarButton</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/Coriolan.ButtonBarButton</item>
		<item name="android:buttonBarNeutralButtonStyle">@style/Coriolan.ButtonBarButton</item>
	</style>

</resources>