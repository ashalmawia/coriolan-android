<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:orientation="vertical"
			 android:padding="@dimen/spacing__medium"
			 android:stretchColumns="*">

	<TableRow>

		<TextView
			style="@style/DeckDetails.Caption.Vertical"
			android:text="@string/deck_details_new"
			/>

		<TextView
			android:id="@+id/cellNew"
			style="@style/DeckDetails.Cell"
			/>

	</TableRow>

	<TableRow>

		<TextView
			style="@style/DeckDetails.Caption.Vertical"
			android:text="@string/deck_details_review"
			/>

		<TextView
			android:id="@+id/cellReview"
			style="@style/DeckDetails.Cell"
			/>

	</TableRow>

	<TableRow>

		<TextView
			style="@style/DeckDetails.Caption.Vertical"
			android:text="@string/deck_details_total"
			/>

		<TextView
			android:id="@+id/cellTotal"
			style="@style/DeckDetails.Cell"
			/>

	</TableRow>

</TableLayout>