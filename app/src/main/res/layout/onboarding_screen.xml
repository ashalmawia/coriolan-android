<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimaryLightest"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="12dp">

	<ImageView
		android:id="@+id/onboardingImageView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"
		android:scaleType="centerInside"
		tools:src="@drawable/onboarding_1_create_card" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:gravity="center_horizontal">

		<TextView
			android:id="@+id/onboardingTitleView"
			style="@style/Coriolan.Text.Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="20dp"
			android:textAlignment="center"
			tools:text="@string/onboarding_1_title" />

		<TextView
			android:id="@+id/onboardingDetailsView"
			style="@style/Coriolan.Text.Body.Large"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			tools:text="@string/onboarding_1_description" />

	</LinearLayout>

</LinearLayout>